{% extends 'base.html.twig' %}

{% block title %}
    {{ course.name }} | {{ parent() }}
{% endblock %}

{% block body %}
    <h1>{{ course.name }}</h1>
    <p>{{ course.content }}</p>
    <p>Duration (days): {{ course.duration }}</p>
    <p>Date Created: {{ course.dateCreated | date('d/m/Y') }}</p>
    <p>Published: {{ course.published ? "Yes": "No" }}</p>
{% endblock %}